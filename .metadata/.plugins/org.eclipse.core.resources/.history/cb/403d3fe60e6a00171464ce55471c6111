//java socket client example
import java.io.*;
import java.net.*;
import org.testng.annotations.Test;
import org.testng.annotations.DataProvider;
public class TelnetExample{
	@Test
    public static void CreateConnection() throws IOException {
        Socket s = new Socket();
        PrintWriter s_out = null;
        BufferedReader s_in = null;
        try {
        	s.connect(new InetSocketAddress("10.63.10.222" , 23));
                       
        //writer for socket
            s_out = new PrintWriter( s.getOutputStream(), true);
            
            //reader for socket
            s_in = new BufferedReader(new InputStreamReader(s.getInputStream()));
            }catch (UnknownHostException e){
            System.err.println("Don't know about host : ");
            System.exit(1);
        }  
        //Send message to server
       sendCmd(s_out, "en");
       sendEnter(s_out);
       sendCmd(s_out, "cisco");
       sendEnter(s_out);
       System.out.println("Connected"); 
        // System.out.println("Message send");
       sendCmd(s_out, "show version");
       sendEnter(s_out);
	    //Get response from server
	    String response;
	    response = s_in.readLine();
	    
	   // while ((response = s_in.readLine()) != null){
	        System.out.println( response.startsWith("show") );
	   // }
    }
	
	public static void sendEnter(PrintWriter s_out){
		String cmd = "\n";
        s_out.print( cmd );
	}
	public static void sendCmd(PrintWriter s_out, String cmd) {
		s_out.println( cmd );
	}
}